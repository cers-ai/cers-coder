# CERS Coder 环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# Ollama 配置
OLLAMA_HOST=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3:8b

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/cers-coder.log

# 工作目录配置
WORK_DIR=./workspace
OUTPUT_DIR=./out
STATE_DIR=./state
MEMORY_DIR=./memory

# 系统配置
MAX_CONCURRENT_AGENTS=3
AGENT_TIMEOUT=300
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# 开发模式
DEBUG=false
VERBOSE=false
